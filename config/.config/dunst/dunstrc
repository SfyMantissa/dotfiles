# +TODO Change structure, tinker with the options.
[global]

    icon_position = right
    icon_size = 48
    icon_path = "/usr/share/icons/Papirus/64x64/apps/"
    # Notification width.
    width = 512

    # Notification height.
    height = 56

    # Origin position for notifications.
    origin = bottom-right

    # Offset from the origin.
    offset = (4, 4)

    # Maximum number of notifications (0 means no limit).
    notification_limit = 2

    # Show how many notifications are currently hidden.
    indicate_hidden = yes

    # The transparency of the window.  Range: [0; 100].
    transparency = 0

    # Defines color of the frame around the notification window.
    frame_color = "#bd93f9"

    # Define a color for the separator.
    separator_color = foreground

    # Sort messages by urgency.
    sort = yes

    # Don't remove messages, if the user is idle (no mouse or keyboard input)
    # for longer than idle_threshold seconds.
    idle_threshold = 60

    # Font used for text.
    font = Iosevka Extended 10

    # The spacing between lines. If the height is smaller than the
    # font height, it will get raised to the font height.
    line_height = 0

    # The format of the message.
    format = "%a%s\n%b"

    # Alignment of message text.
    alignment = left

    # Vertical alignment of message text and icon.
    vertical_alignment = top

    # Show age of message if message is older than show_age_threshold seconds.
    show_age_threshold = 60

    # Display indicators for URLs (U) and actions (A).
    show_indicators = no

    # Align icons left/right/off.
    icon_position = right

    # Should a notification popped up from history be sticky or timeout
    # as if it would normally do.
    sticky_history = yes

    # Maximum amount of notifications kept in history.
    history_length = 64

    # Context menu path.
    dmenu = /usr/bin/rofi -dmenu -p dunst:

    # Browser for opening urls in context menu.
    browser = /usr/bin/firefox --new-tab

    # Always run rule-defined scripts, even if the notification is suppressed
    always_run_script = true

    # Define the corner radius of the notification window in pixel size.
    corner_radius = 16

    # Defines list of actions for each mouse event.
    mouse_left_click = context, close_current
    mouse_middle_click = close_all
    mouse_right_click = close_current

[urgency_low]
    background = "#282a36"
    foreground = "#6272a4"
    timeout = 5

[urgency_normal]
    background = "#282a36"
    foreground = "#bd93f9"
    timeout = 10

[urgency_critical]
    background = "#ff5555"
    foreground = "#f8f8f2"
    frame_color = "#ff5555"
    timeout = 30

